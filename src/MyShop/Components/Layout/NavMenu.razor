@using MyShop.Business

@rendermode InteractiveServer
@attribute [StreamRendering]
@inject Cart Cart

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MyShop</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Products
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cart">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cart
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <button class="btn btn-primary" type="submit" @onclick="OnReload">Reload</button>
        </div>
    </nav>
</div>

@code {
    private async void OnReload()
    {
        Cart.Products.Clear();
        Cart.WasCartFetched = false;
    }
}

